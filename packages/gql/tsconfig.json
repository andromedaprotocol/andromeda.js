{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "jsx": "preserve",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "__generated/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*.ts",
    "plugins/**/*.ts",
    "schema/**/*.ts",
  ]
}