{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "jsx": "preserve",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": [
      "esnext"
    ],
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*.ts"
  ]
}