{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "plugins/dist",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "plugins/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*.ts"
  ]
}