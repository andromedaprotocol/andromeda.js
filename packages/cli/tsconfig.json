{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*.ts",
