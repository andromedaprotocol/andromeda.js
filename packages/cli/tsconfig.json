{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "lib": [
      "esnext"
    ],
    "baseUrl": "./src",
    "rootDir": "."
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.json",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*.ts"
  ]
}